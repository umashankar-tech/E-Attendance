<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#143C5C"
    android:layout_gravity="center"
    tools:context=".studentpart.StudentSubjectListToGetAttPer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B7D3EA"
        android:padding="10dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="97dp"
            android:onClick="gotoViewAttBySubjects"
            android:layout_height="80dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/attchecklist"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/attlistBySubjects"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:onClick="gotoViewAttBySubjects"
            android:paddingTop="3dp"
            android:paddingBottom="7dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_corner_radius"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="View Attendance" />

        <ImageView
            android:id="@+id/imageviewmsg"
            android:layout_width="97dp"
            android:onClick="gotomsg"
            android:layout_height="80dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_baseline_notifications_active_24"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/txtviewmsg"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:onClick="gotomsg"
            android:paddingTop="3dp"
            android:paddingBottom="7dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_corner_radius"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="Notification" />


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="90dp"
            android:layout_marginTop="30dp"
            android:onClick="gotoDownloadPdf1"
            android:layout_height="80dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_baseline_file_download_24"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/downloadpdf"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="3dp"
            android:paddingBottom="7dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_corner_radius"
            android:textSize="20dp"
            android:layout_marginBottom="30dp"
            android:onClick="gotoDownloadPdf1"
            android:textColor="@color/black"
            android:text="View Files" />
    </LinearLayout>
</LinearLayout>